#include<iostream>
using namespace std;
int main()
 {
     int salary;
     char gender;
     cout<<"enter the salary  :";
     cin>>salary;
     cout<<"enter the gender : ";
     cin>>gender;
 float a,b,c,sum;
 int bonus ;
 if ( salary <10000)
 {
    bonus = 2 ;
 }
 else{
     bonus = 0;
 }
 if (gender == 'M' || gender ==  'm')
 {
    bonus=( (5 + bonus)*salary)/100;
     cout<<"you are male so your bonus is ="<<bonus<<endl;
     cout << "your total salary is ="<< salary + bonus <<" rs";  
 }
else if(gender == 'f' || gender ==  'F')
 {
     bonus =( (10 + bonus )*salary)/100;
     cout<<"you are female so your bonus is ="<<bonus<<endl;
     cout << "your total salary is ="<< salary + bonus <<" rs";  
 }
 else{
     cout<<"oops.. try again"<<endl;
 }++
 }
 
